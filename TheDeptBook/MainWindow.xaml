<Window x:Class="TheDeptBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheDeptBook"
        mc:Ignorable="d"
        Title="The Dept Book" Height="450" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Deptors" HorizontalAlignment="Left" 
               Margin="31,33,0,0" VerticalAlignment="Top"/>

        <Button Content="Add" Grid.Column="1" HorizontalAlignment="Center" 
                VerticalAlignment="Top" Margin="0,64,0,0"
                Width="75" Click="AddDept_Click"/>

        <ListBox HorizontalAlignment="Left" Height="200" 
                 Margin="31,64,0,0" VerticalAlignment="Top" 
                 MinWidth="100"/>


    </Grid>
</Window>
