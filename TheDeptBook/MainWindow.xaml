<Window x:Class="TheDeptBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheDeptBook"
        xmlns:viewModel="clr-namespace:TheDeptBook.ViewModel"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        Title="The Debt Book" Height="450" Width="400">
    <Window.DataContext>
        <viewModel:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Debtors" HorizontalAlignment="Left" 
               Margin="33,25,0,0" VerticalAlignment="Top"/>

        <DataGrid ItemsSource="{Binding Path=Debtors}"
                  AutoGenerateColumns="False"
                  SelectedItem="{Binding Path=CurrentDebtor}" 
                  SelectedIndex="{Binding Path=CurrentIndex}"
                  ItemTemplate="{StaticResource lbxTemplate}"
                  HorizontalAlignment="Left" 
                  MinHeight="100" 
                  Margin="10,50,10,0" 
                  VerticalAlignment="Top" 
                  Width="200" MinWidth="100"
                  IsReadOnly="True">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <prism:InvokeCommandAction Command="{Binding DebtorClicked}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <DataGrid.Columns>
                <DataGridTextColumn Header="DebtorNo." Binding="{Binding ID}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Balance" Binding="{Binding Value}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Add" ToolTip="Add Debtor"
                Command="{Binding Path=AddDebtor}"
                Grid.Column="1" HorizontalAlignment="Center" 
                Margin="0,50,0,0" VerticalAlignment="Top" 
                Width="75"/>

    </Grid>
</Window>
