<Window x:Class="TheDeptBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheDeptBook"
        mc:Ignorable="d"
        Title="The Debt Book" Height="450" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Debtor" HorizontalAlignment="Left" 
               Margin="33,33,0,0" VerticalAlignment="Top"/>

        <Button Content="Add" Grid.Column="1" HorizontalAlignment="Left" 
                Margin="63.333,59,0,0" VerticalAlignment="Top" 
                Width="75" Click="AddDebt_Click"/>

        <ListBox HorizontalAlignment="Left" MinHeight="100" 
                 Margin="33,59,0,0" VerticalAlignment="Top" 
                 MaxWidth="150" MinWidth="100"/>



    </Grid>
</Window>
