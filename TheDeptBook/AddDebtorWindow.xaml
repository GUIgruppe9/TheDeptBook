<Window x:Class="TheDeptBook.AddDebtorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheDeptBook"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        Title="Add Deptor" Height="300" Width="230">
    <Grid Background="DarkGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Column="0" 
                 Grid.Row="0" 
                 Grid.ColumnSpan="2" 
                 HorizontalAlignment="Center" 
                 Height="23" 
                 TextWrapping="Wrap" 
                 TabIndex="1"

                 Text="{Binding Path=newDebtor.ID}"
                 VerticalAlignment="Center" 
                 Width="120"/>

        <TextBox Grid.Column="0"
                 Grid.Row="0"
                 Grid.RowSpan="2"
                 Grid.ColumnSpan="2"
                 Height="23"
                 HorizontalAlignment="Center"
                 Width="120"
                 TabIndex="2"
                 VerticalAlignment="Center"
                 Text="{Binding Path=newDebtor.Name}"/>

        <TextBox Grid.Column="0" 
                 Grid.Row="1" 
                 Grid.ColumnSpan="2" 
                 HorizontalAlignment="Center" 
                 Height="23"  
                 TextWrapping="Wrap" 
                 TabIndex="3"
                 Text="{Binding Path=newDebtor.Value}" 
                 VerticalAlignment="Center" 
                 Width="120"/>

        <Button Grid.Column="0" 
                Grid.Row="2" 
                HorizontalAlignment="Center"  
                VerticalAlignment="Center" 
                Width="75"
                IsDefault="True"
                TabIndex="4"
                Name="BtnAdd"
                Content="Add" 
                Click="Add_OnClk"
                Command="{Binding Path=AddBtnCommand, Mode=OneTime}"
                Background="LawnGreen"/>

        <Button Grid.Column="1" 
                Grid.Row="2" 
                Content="Cancel" 
                HorizontalAlignment="Center"  
                VerticalAlignment="Center" 
                Width="75"
                IsCancel="True"
                TabIndex="5"
                Background="red"/>

        <Label Content="ID:" 
               HorizontalAlignment="Left" 
               Margin="0,34,0,0" 
               VerticalAlignment="Top" 
               Height="23" 
               Width="24"
               Padding="3"/>

        <Label Content="Name:"
               Width="44"
               Height="25"
               Grid.RowSpan="2"
               HorizontalAlignment="Left" Margin="0,79"
               Padding="3"/>

        <Label Content="Value:" 
               HorizontalAlignment="Left" 
               Margin="0,34.667,0,0" 
               Grid.Row="1" 
               VerticalAlignment="Top" 
               Height="23" 
               Width="42"
               Padding="3"/>


    </Grid>
</Window>
